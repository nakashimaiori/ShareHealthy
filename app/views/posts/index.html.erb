

<div class="container">

<%= render "genre_bar", genres: @genres %>


<h3>タグリスト</h3>
  <% @tag_list.each do |list| %>
      <%= link_to tag_posts_path(list.id) do %>
        <%= list.tag_name %>
      <% end %>
      <%= list.posts.count %>
  <% end %>

  <%= search_form_for @search do |f| %>
  <%= f.search_field :title_or_content_cont %>
  <%= f.submit "検索" %>
<% end %>


    <% if controller.action_name == "search" %>
        <h1 class="title"><%= @genre.name %><span>(全 <%= @posts.count %> 件)</span></h1>
      <% else %>

      <% end %>



    <div class="ml-auto posts_button">
        <a class="btn btn-outline-info" href="/posts/new" role="button">新規投稿</a>
</div>
<table class="table table-bordered border-primary table-hover table-sm posts_table">
  <thead class="thead-dark">
    <tr>
      <th scope="col" style="width: 700px">投稿タイトル</th>
      <th scope="col">投稿者</th>
      <th scope="col">投稿日</th>
      <th scope="col">更新日時</th>
    </tr>
  </thead>
  <tbody>

      <% @posts.each do |post| %>
        <tr>
            <td>
              <%= link_to post.title, post_path(post.id) %>
              <%#= link_to "#{post.post_comments.count} コメント", post_path(post.id) %>
              </td>
            <td><%= post.user.name %></td>
            <td><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></td>
            <td><%= post.updated_at.strftime('%Y/%m/%d %H:%M') %></td>
        </tr>
      <% end %>
  </tbody>
</table>
</div>
