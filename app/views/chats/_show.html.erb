                    <col style="width:10%;">

                  </colgroup>
                  <tr>
                     <td class="timestamp"><%= m.created_at.strftime('%Y/%m/%d %H:%M') %></td>
                     <td ~~~ style="word-wrap:break-word;"><strong class="myhukidasi"><%= m.message %></strong></td>
                     <td></td>
                  </tr>
               </table>
              </div>
           </div>

  <% else %>
