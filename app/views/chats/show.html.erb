<div class="container">
  <div class="">

    <div class="chatroom-box">
      <div class="chatroom-box-title">
        <div class="user-name">

          <% @entries.each do |e| %>
            <strong>
              <a class="rooms-user-link" href="/users/<%= e.user.id %>">
                <%= e.user.name %>さん<br>
              </a>
            </strong>
          <% end %>
        </div>
      </div>


    <div class="chats">

      <div id="allchat" class="chat">
        <%= render 'chats/show', messages: @messages %>
      </div>

      <div class="posts">
  	    <%= form_with(model:@message, remote: true) do |f| %>
          <div class="message_form">
            <%= f.text_field :message, placeholder: "メッセージを入力" , class:"message-form" %>
            <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.submit "投稿",class: 'form-submit btn-gradation'%>
          </div>
        <% end %>
      </div>

    </div>
  </div>

  </div>
</div>
