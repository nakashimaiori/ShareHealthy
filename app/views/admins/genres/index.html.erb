<div class="container">

<h1>Admins::Genres#index</h1>

<%= form_for @genre, url: admins_genres_path do |f| %>

     <div class="form-group">
        <%= f.label :ジャンル %>
        <%= f.text_field :name %>
     </div>

     <%= f.submit '追加' %>

        <% end %>


<table>
	<thead>
		<tr>
			<th>genre一覧</th>
		</tr>
	</thead>
	<tbody>
			<% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "Destroy", admins_genre_path(genre.id), method: :delete, "data-confirm" => "Are you sure？" %></td>
            <% end %>
            </tr>
	</tbody>
</table>

</div>
